# ByteDocs Configuration

# API Information
BYTEDOCS_TITLE="API Documentation"
BYTEDOCS_VERSION="1.0.0"
BYTEDOCS_DESCRIPTION="Auto-generated API documentation with AI assistance"

# Base URLs for different environments
BYTEDOCS_PRODUCTION_URL="https://api.yourapp.com"
BYTEDOCS_STAGING_URL="https://staging-api.yourapp.com"
BYTEDOCS_LOCAL_URL="http://localhost:8000"

# Documentation path
BYTEDOCS_PATH="/docs"

# Auto-detect routes
BYTEDOCS_AUTO_DETECT=true

# Route detection mode
BYTEDOCS_ROUTE_MODE="api"

# Authentication Configuration
BYTEDOCS_AUTH_ENABLED=false
BYTEDOCS_AUTH_PASSWORD=
BYTEDOCS_AUTH_SESSION_EXPIRE=1440

# IP Ban Configuration
BYTEDOCS_AUTH_IP_BAN_ENABLED=true
BYTEDOCS_AUTH_IP_BAN_MAX_ATTEMPTS=5
BYTEDOCS_AUTH_IP_BAN_DURATION=60

# Admin Whitelist (comma separated IPs)
BYTEDOCS_ADMIN_WHITELIST_IPS="127.0.0.1"

# AI Configuration
BYTEDOCS_AI_ENABLED=false
BYTEDOCS_AI_PROVIDER="openai"
BYTEDOCS_AI_API_KEY=

# AI Features
BYTEDOCS_AI_CHAT_ENABLED=true
BYTEDOCS_AI_DOC_GENERATION_ENABLED=false
BYTEDOCS_AI_MODEL="gpt-4o-mini"
BYTEDOCS_AI_MAX_TOKENS=1000
BYTEDOCS_AI_MAX_COMPLETION_TOKENS=1000
BYTEDOCS_AI_TEMPERATURE=0.7

# UI Configuration
BYTEDOCS_THEME="auto"
BYTEDOCS_SHOW_TRY_IT=true
BYTEDOCS_SHOW_SCHEMAS=true
BYTEDOCS_CUSTOM_CSS=
BYTEDOCS_CUSTOM_JS=
BYTEDOCS_FAVICON=
